<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <Authors>numbworks</Authors>
    <Version>1.0.0</Version>
    <Company>numbworks</Company>
    <Description>NW.Shared.Files is a library that provides a collection of adapters to overcome the limits of System.IO.File and System.IO.FileInfo.</Description>
    <Copyright>numbworks 2024</Copyright>
    <PackageIconUrl>https://raw.githubusercontent.com/numbworks/numbworks/master/numbworks_logo_128x128px.png</PackageIconUrl>	
    <PackageProjectUrl>https://github.com/numbworks/NW.Shared.Files</PackageProjectUrl>
    <RepositoryUrl>https://github.com/numbworks/NW.Shared.Files</RepositoryUrl>
    <PackageTags>csharp library system.io.file system.io system.io.fileinfo</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <IsPackable>true</IsPackable>	
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NW.Shared.Validation" Version="1.0.0" />
  </ItemGroup>

</Project>